extends ./layout.pug


block scripts
  link(rel='stylesheet', type='text/css', href='stylesheets/sign-in-modules.css')
  script(type='text/javascript' src='https://code.jquery.com/jquery-2.2.4.min.js')
  script(type='text/javascript' src='scripts/mask-plugin.js')
  script(type='text/javascript' src='scripts/masks.js')

block body
  - var placeHolder = __('Mobile Number')
  if error
    - var placeHolder = error
    - var mobileNumberStyle = 'border-color: red'
  else
    - var placeHolder = __('Mobile Number')
  form.pure-form.pure-form-stacked(action='/mobileNumberProcessForm', method='post')
    fieldset
      .upper-box
        div
          h1.title-padding #{__('SMS Authorization')}
        .pure-control-group
          label.labels(for='mobileNumber') #{__('Mobile Number')}:
          .input-fields.content
            input#mobileNumber.pure-input-1.input-fields.input-type-text(style=mobileNumberStyle, pattern='+7([0-9]{3})[0-9]{3}-[0-9]{2}-[0-9]{2}', type='tel', placeholder=placeHolder, name='mobileNumber', autofocus='')
            input#clientId(type='hidden', name='clientId', value=clientId)
      .bottom-box
        .pure-controls.sign-in-button
          button.pure-button.pure-button-primary(type='submit', value=__('Submit')) #{__('Send code')}
